@using Microsoft.AspNetCore.Components.Forms

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <h1 id="NuevaCuenta">Nueva Cuenta</h1>
            <form action="/cuenta/create" method="post">
                
                <div class="mb-3">
                    <label for="Nombre">Nombre</label>
                    <input type="text" class="form-control" Name="Nombre" id="Nombre" value="@Model.Nombre">
                    @Html.ValidationMessage("Nombre")
                </div>
                <div>
                    <label for="Categoria">Categoria</label>
                    <select class="form-select" name="Categoria" id="Categoria">
                        <option value="">-- Seleccione una categoria --</option>
                        <option value="PROPIO">Propio</option>
                        <option value="CREDITO">Credito</option>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="TipoId">Tipo Cuenta</label>
                    
                    <select class="form-select" name="TipoId" id="TipoId">
                        <option value="">-- Seleccione un tipo de cuenta --</option>
                        @foreach (var item in ViewBag.TipoDeCuentas)
                        {
                            if (item.Id == Model.TipoId)
                            {
                                <option value="@item.Id" selected>@item.Nombre</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.Nombre</option>
                            }
                        }
                    </select>
                    
                    @Html.ValidationMessage("TipoCuentaId")
                </div>
                
                <div class="mb-3">
                    <label for="SaldoInicial">Saldo Inicial</label>
                    <input type="text" class="form-control" Name="SaldoInicial" id="SaldoInicial" value="@Model.SaldoInicial">
                    @Html.ValidationMessage("SaldoInicial")
                </div>
                <div>
                    <label for="Moneda">Moneda</label>
                    <select class="form-select" name="Moneda" id="Moneda">
                        <option value="">-- Seleccione la moneda --</option>
                        <option value="SOLES">Soles</option>
                        <option value="DOLARES">Dolares</option>
                    </select>
                </div>
                
                <br>
                <button class="btn btn-primary">Guardar</button>
                <a href="/cuenta/index" class="btn btn-danger">Cancelar</a>
            </form>
        </div>
    </div>

</div>